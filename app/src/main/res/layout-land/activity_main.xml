<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton"
        android:clickable="true"
        android:background="@drawable/eiffel"
        android:cropToPadding="true"
        android:contentDescription="@string/Pic1Description"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pic1Description"
        android:id="@+id/ImageButtonText1"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="false"
        android:gravity="center"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/kremlin"
        android:contentDescription="@string/Pic2Description"
        android:layout_marginTop="90dp"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pic2Description"
        android:id="@+id/ImageButtonText3"
        android:gravity="center"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_marginTop="-20dp"
        android:layout_alignTop="@+id/imageButton3" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/great"
        android:contentDescription="@string/Pic4Description"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pic4Description"
        android:id="@+id/ImageButtonText2"
        android:gravity="center"
        android:singleLine="false"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginTop="-20dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton4"
        android:background="@drawable/liberty"
        android:contentDescription="@string/Pic3Description"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pic3Description"
        android:id="@+id/ImageButtonText4"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton4"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Welcome"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/title1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:textColor="@color/abc_primary_text_material_light"
        android:text="@string/title2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Welcome" />

</RelativeLayout>
